<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/ib_brush_pequeno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pequeno"
        app:layout_constraintBottom_toTopOf="@+id/ib_brush_medio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_brush_medio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/medio"
        app:layout_constraintBottom_toTopOf="@+id/ib_brush_grande"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_brush_pequeno" />

    <ImageButton
        android:id="@+id/ib_brush_grande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/grande"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_brush_medio" />



</androidx.constraintlayout.widget.ConstraintLayout>